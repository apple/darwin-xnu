export CFLAGS_DEVELOPMENTI386 = -Os
export CFLAGS_DEBUGI386 = -Os
export CFLAGS_PROFILEI386 = -Os

export CFLAGS_RELEASEARM = -O2
export CFLAGS_DEVELOPMENTARM = -O2
export CFLAGS_DEBUGARM = -O2
export CFLAGS_PROFILEARM = -O2

