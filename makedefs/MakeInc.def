ARCH_FLAGS_PPC		  = -arch ppc
ARCH_FLAGS_I386		  = -arch i386
ARCH_FLAGS_ARM		  = $($(addsuffix $(MACHINE_CONFIG),ARCH_FLAGS_ARM_))


#
# Default CFLAGS
#
